#!/usr/bin/env python3

import argparse
import os

def run(args):
    """run"""

    files = [
        os.path.join(args.directory, f)
        for f in os.listdir(args.directory)
        if os.path.isfile(os.path.join(args.directory, f))
    ]

    for file in files:
        print(file)

        new_name = input("New name? (leave line empty or only spaces to skip): ").strip()

        if new_name == "":
            print("Skipping...")

        else:

            if args.prefix is not None:
                new_full_name = os.path.join(args.directory, f"{args.prefix}{new_name}")

            print(f"Renaming {file} -> {new_full_name}")
            os.rename(file, os.path.join(args.directory, new_full_name))

def main():
    parser = argparse.ArgumentParser(
        description="Assist renaming every file in a folder.",
    )

    parser.add_argument(
        "--directory",
        type=str,
        help="Directory to act on. Default: current directory.",
        default=os.getcwd(),
    )

    parser.add_argument(
        "--prefix",
        type=str,
        help="Prefix to add to each new filename. Default: none.",
        default=None,
    )

    args = parser.parse_args()
    run(args)

if __name__ == "__main__":
    main()
